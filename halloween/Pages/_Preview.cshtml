    @model IndexModel

<div class="panel">
	<div class="panel-body">
		<div class="form-group row">
			<h2 class="col-2">To: <br/></h2>
			<div class="col-10 preview">
				@Model.bridgeGreetings.fromName<br/>
				@Model.bridgeGreetings.fromEmail
			</div>
        </div>

        <div class="form-group row">
            <h2 class="col-2">From: <br/></h2>
            <div class="col-10 preview">
				@Model.bridgeGreetings.toName<br/>
				@Model.bridgeGreetings.toEmail
            </div>
        </div>

		<div class="form-group row">
			<h2 class="col-2">Subject: <br/></h2>
            <div class="col-10 preview">
				@Model.bridgeGreetings.subject
			</div>
		</div>

		<div class="form-group row">
			<h2 class="col-2">Message: <br/></h2>
            <div class="col-10 preview">
				@Model.bridgeGreetings.message
			</div>
		</div>
	</div>

	<div class="panel-footer row">
		<input type="submit" value="Send" class="btn btn-primary" style="margin-right: 50%;"/>
		<h2 style="vertical-align:center;"><a href="/">Go Back</a></h2>
</div>
