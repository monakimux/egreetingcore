@model IndexModel





<div class="panel">
    <div class="panel-header">Please confirm the information below.</div>
    <div class="panel-body">
        <div class="to">
            <div class="form-group">
                <label asp-for="bridgeGreetings.toName" class="col-2"></label>
                <div class="col-10">
                    @Model.bridgeGreetings.toName
                </div>
            </div>
            <div class="form-group">
                <label asp-for="bridgeGreetings.toEmail" class="col-2"></label>
                <div class="col-10">
                    @Model.bridgeGreetings.toEmail
                </div>
            </div>



            <div class="custom">
                <div class="form-group">
                    <label class="col-2" asp-for="bridgeGreetings.subject"></label>
                    <div class="col-10">
                        <input type="text" asp-for="bridgeGreetings.subject" placeholder="" class="form-control" maxlength="100" />
                        <div asp-validation-for="bridgeGreetings.subject" class="text-danger"></div>
                        <div class="countdown"></div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="bridgeGreetings.mesg" class="col-2"></label>
                    <div class="col-10">
                        <textarea asp-for="bridgeGreetings.mesg" class="form-control" placeholder="Personalize your message here." maxlength="140"></textarea>
                        <div asp-validation-for="bridgeGreetings.mesg" class="text-danger"></div>
                        <div class="countdown"></div>
                    </div>
                </div>

            </div>



            <div class="from">
                <div class="form-group">
                    <label asp-for="bridgeGreetings.fromName" class="col-2"></label>
                    <div class="col-10">
                        <input type="text" asp-for="bridgeGreetings.fromName" placeholder="Your name" class="form-control" />
                        <div asp-validation-for="bridgeGreetings.fromName" class="text-danger"></div>
                        <div class="countdown"></div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="bridgeGreetings.fromEmail" class="col-2">Email:</label>
                    <div class="col-10">
                        <input type="email" asp-for="bridgeGreetings.fromEmail" class="form-control" />
                        <div asp-validation-for="bridgeGreetings.fromEmail" class="text-danger"></div>
                        <div class="countdown"></div>
                    </div>
                </div>
            </div>
        </div>

    </div>







