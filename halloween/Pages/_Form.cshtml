    @model IndexModel

    <form action="/" method="post">
    	<div class="form-group">
    		<label asp-for="bridgeGreetings.fromName" class="sr-only col-2"></label>
    		<div class="col-10">
                    <input type="text" asp-for="bridgeGreetings.fromName" class="form-control"  maxlength="100"/>
                    <div asp-validation-for="bridgeGreetings.fromName" class="text-danger"></div>
    			<div class="countdown"></div>
    		</div>
    	</div>

    	<div class="form-group">
            <label asp-for="bridgeGreetings.fromEmail" class="sr-only col-2"></label>
            <div class="col-10">
                    <input type="text" asp-for="bridgeGreetings.fromEmail" class="form-control"  maxlength="100"/>
                    <div asp-validation-for="bridgeGreetings.fromEmail" class="text-danger"></div>
                <div class="countdown"></div>
            </div>
        </div>

    	<div class="form-group">
            <label asp-for="bridgeGreetings.toName" class="sr-only col-2"></label>
            <div class="col-10">
                    <input type="text" asp-for="bridgeGreetings.toName" class="form-control"  maxlength="100"/>
                    <div asp-validation-for="bridgeGreetings.toName" class="text-danger"></div>
                <div class="countdown"></div>
            </div>
        </div>

    	<div class="form-group">
            <label asp-for="bridgeGreetings.toEmail" class="sr-only col-2"></label>
            <div class="col-10">
                    <input type="text" asp-for="bridgeGreetings.toEmail" class="form-control"  maxlength="100"/>
                    <div asp-validation-for="bridgeGreetings.toEmail" class="text-danger"></div>
                <div class="countdown"></div>
            </div>
        </div>

    	   <div class="form-group">
            <label asp-for="bridgeGreetings.subject" class="sr-only col-2"></label>
            <div class="col-10">
                    <input type="text" asp-for="bridgeGreetings.subject" class="form-control"  maxlength="100"/>
                    <div asp-validation-for="bridgeGreetings.subject" class="text-danger"></div>
                <div class="countdown"></div>
            </div>
        </div>
        

     <div class="form-group">
                        <label asp-for="bridgeGreetings.message" class="col-2"></label>
                        <div class="col-10">
                            <textarea asp-for="bridgeGreetings.message" class="form-control" placeholder="Your message" maxlength="140"></textarea>
                            <div asp-validation-for="bridgeGreetings.message" class="text-danger"></div>
                            <div class="countdown"></div>
                        </div>
                    </div>
    	
                    <div class="checkbox-inline">
                        <label>
                        <input type="checkbox" asp-for="bridgeGreetings.tandcagree" value="">I agree to the <a>Terms and Conditions</a>
                        </label>
                        </div>
                    <div class="g-recaptcha" data-sitekey="6LeO8zAUAAAAAGSJRmMOqIAv3eVYD6LJp5KrxV0l"></div>

            <div class="panel-footer">
                <input type="submit" value="Next" class="btn btn-primary" />
                <a href="/">Start Over</a>
            </div>
        </div>




    </form>




